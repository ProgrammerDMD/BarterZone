@model Project.Domain.Entities.Login.LoginViewModel
@{
    ViewBag.Title = "Login";
    ViewBag.ActiveMenu = "Login";
    Layout = "_Layout.cshtml";
}
<div class="bg-white border border-gray-200 rounded-xl shadow-2xs w-[512px] m-auto">
  <div class="p-4 sm:p-7">
    <div class="text-center">
      <h1 class="block text-2xl font-bold text-gray-800">Sign in</h1>
      <p class="mt-2 text-sm text-gray-600">
        Don't have an account yet?
        <a class="text-blue-600 decoration-2 hover:underline focus:outline-hidden focus:underline font-medium" href="/Auth/Register">
          Sign up here
        </a>
      </p>
    </div>

    <div class="mt-5">
      <!-- Form -->
      @using (Html.BeginForm("Login", "Auth", FormMethod.Post))
      {
        @Html.AntiForgeryToken()
        <div class="grid gap-y-4">
          <!-- Form Group -->
          <div>
            @Html.LabelFor(model => model.Email, new { @class = "block text-sm mb-2" })
            <div class="relative">
              @Html.TextBoxFor(m => m.Email, new { @class = "py-2.5 sm:py-3 px-4 block w-full border-gray-200 rounded-lg sm:text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none", placeholder = "you@email.com", type = "email", required = "required", aria_describedby = "email-error" })
              <div class="hidden absolute inset-y-0 end-0 pointer-events-none pe-3">
                <svg class="size-5 text-red-500" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" aria-hidden="true">
                  <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4zm.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2z"/>
                </svg>
              </div>
            </div>
            @Html.ValidationMessageFor(m => m.Email, "", new { @id = "email-error", @class = "text-xs text-red-600 mt-2" })
          </div>
          <!-- End Form Group -->

          <!-- Form Group -->
          <div>
            <div class="flex flex-wrap justify-between items-center gap-2">
              @Html.LabelFor(model => model.Password, new { @class = "block text-sm mb-2" })
              <a class="inline-flex items-center gap-x-1 text-sm text-blue-600 decoration-2 hover:underline focus:outline-hidden focus:underline font-medium" href="/Auth/Recover">Forgot password?</a>
            </div>
            <div class="relative">
              <input type="password" id="password" name="password" class="py-2.5 sm:py-3 px-4 block w-full border-gray-200 rounded-lg sm:text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none" required aria-describedby="password-error">
              <div class="hidden absolute inset-y-0 end-0 pointer-events-none pe-3">
                <svg class="size-5 text-red-500" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" aria-hidden="true">
                  <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4zm.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2z"/>
                </svg>
              </div>
            </div>
            @Html.ValidationMessageFor(m => m.Password, "", new { @id = "password-error", @class = "text-xs text-red-600 mt-2" })
          </div>
          <!-- End Form Group -->

          <!-- Checkbox -->
          <div class="flex items-center">
            <div class="flex">
              @Html.CheckBoxFor(m => m.RememberMe, new { @class = "shrink-0 mt-0.5 border-gray-200 rounded-sm text-blue-600 focus:ring-blue-500" })
            </div>
            <div class="ms-3">
              @Html.LabelFor(m => m.RememberMe, new { @class = "text-sm" })
            </div>
          </div>
          <!-- End Checkbox -->

          <button type="submit" class="w-full py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-medium rounded-lg border border-transparent bg-blue-600 text-white hover:bg-blue-700 focus:outline-hidden focus:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none">Sign in</button>
        </div>
      }
      <!-- End Form -->
    </div>
  </div>
</div>