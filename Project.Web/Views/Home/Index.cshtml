                        <ul class="max-w-sm flex flex-col">
                            @foreach (var category in categories)
                            {
                                <li class="inline-flex items-center gap-x-2 py-3 px-4 text-sm font-medium bg-white border text-gray-800 -mt-px first:rounded-t-lg first:mt-0 last:rounded-b-lg">
                                    <div class="relative flex items-start w-full cursor-pointer">
                                        <div class="flex items-center h-5">
                                            <input id="category-@category.Key" name="category" type="checkbox" class="border-gray-200 rounded disabled:opacity-50 cursor-pointer" checked="">
                                        </div>
                                        <label for="category-@category.Key" class="ms-3.5 block w-full text-sm text-gray-600 cursor-pointer">
                                            @category.Value
                                        </label>
                                    </div>
                                </li>
                            }
